generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  senha    String
  username String
  avatar   String
}

enum Status {
  criado
  andamento
  finalizado
}

model conexao {
  id               Int      @id @default(autoincrement())
  id_usuario_a     Int
  id_usuario_b     Int
  data_solicitacao DateTime @default(now())
  status           Status   @default(criado)
}
