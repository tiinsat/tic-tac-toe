
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  id          Int     @id @default(autoincrement())
  nome        String
  email       String  @unique
  senha       String
  username    String
  avatar      String
}

enum Status {
  criado
  andamento
  finalizado
}

model conexao {
  id              Int      @id @default(autoincrement())
  id_usuario_a    Int
  id_usuario_b    Int? //1.c transformar esta coluna em uma coluna nullable (pode criar a linha sem este valor)
  data_solicitacao DateTime @default(now())
  status          Status   @default(criado)
}

enum PecaDoJogador{
  x
  o
}

model partida_historico{
  id Int @id @default(autoincrement())
  id_partida Int
  id_usuario Int
  area_jogada Int
  peca_do_jogador PecaDoJogador
  data_solicitacao DateTime @default(now())

}
